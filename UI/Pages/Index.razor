@page "/"

<div class="row">
    <!-- Carousel -->
    <div class="col-md-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="3500">
                    <img class="d-block w-100" src="/images/bedre-dansktop.jpeg" alt="First slide">
                </div>
                <div class="carousel-item" data-interval="3500">
                    <img class="d-block w-100" src="/images/neonlys.jpeg" alt="Second slide">
                </div>
                <div class="carousel-item" data-interval="3500">
                    <img class="d-block w-100" src="/images/forbande-ungdom.jpg" alt="Third slide">
                </div>
                <div class="carousel-item" data-interval="3500">
                    <img class="d-block w-100" src="/images/denandenside.jpeg" alt="Fourth slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
    </div>

    <!-- Featured Listing -->
    <div class="col-md-6 d-flex flex-column justify-content-center align-items-start">
        <h2 class="text-center">Ukendt Kunstner</h2>
        <h6 class="text-center">Get 'Dansktop' on Vinyl Now!</h6>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" onclick="location.href='/vinyls'">Go to Shop</button>
        </div>
    </div>
</div>